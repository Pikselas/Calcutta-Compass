<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUITestAPP.ExplorePage"
             Title="ExplorePage"
             Shell.NavBarIsVisible="False">

    <Grid VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
        <WebView x:Name="myWebView" Source="www/viewmap.html" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand"/>
        <Border BackgroundColor="#cfedff" Margin="0,0,0,10" Stroke="#4fade3" VerticalOptions="End" WidthRequest="70" HeightRequest="70" StrokeThickness="3" StrokeShape="RoundRectangle 40" Padding="10">
            <ImageButton Source="location_blue.png" Clicked="OpenInMap"/>
        </Border>
    </Grid>
</ContentPage>